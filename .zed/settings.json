{
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "extraPaths": [
            "./.venv/Lib/site-packages",
            "./.venv/lib/python3.13/site-packages",
            "./.venv/lib/python3.14/site-packages",
          ],
          "typeCheckingMode": "basic",
          "diagnosticSeverityOverrides": {
            "reportMissingModuleSource": false,
          },
        },
      },
    },
  },
}
